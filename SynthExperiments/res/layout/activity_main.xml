<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <uk.co.krispopat.synthexperiments.WaveView
        android:id="@+id/waveView1"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp" />

    <uk.co.krispopat.synthexperiments.views.MIDIKeys
        android:id="@+id/mIDIKeys1"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_alignLeft="@+id/waveView1"
        android:layout_below="@+id/waveView1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"  />

</RelativeLayout>